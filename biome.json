{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"files": {
		"ignore": [
			".*/node_modules",
			".*/docs",
			"**/*.d.ts",
			"**/*.js",
			"**/*.json"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
